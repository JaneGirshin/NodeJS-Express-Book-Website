<div class="view-page new-page view-author">
    <h2><%= author.name %></h2>
    <div class="align-row view-button">
        <a href="/authors/<%= author.id %>/edit">Edit</a>
        <%- include('../partials/deleteForm', { url: `/authors/${author.id}`}) %>
    </div>
    <% if(booksByAuthor.length > 0) { %>
        <h2 class="title-books-by">Books by Author</h2>
        <% booksByAuthor.forEach(book => { %>
            <a href="/books/<%= book.id %>">
                <img height="150" width="150" src="<%= book.coverImagePath %>">
            </a>
        <% }) %>
    <% } %>
</div>