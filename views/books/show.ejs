<div class="view-page new-page">
    <h2><%= book.title %></h2>
    <div class="view-book-info">
        <img src="<%= book.coverImagePath %>" width="100" height="150">
        <div>Author: <%= book.author.name %></div>
        <div>Publish Date: <%= book.publishDate.toDateString() %></div>
        <div>Page Count: <%= book.pageCount %></div>
        <div id="book-desc">Description: <%= book.description %></div>
    </div>
    <div class="view-button">
        <div class="align-row">
            <a href="/books/<%= book.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm', { url: `/books/${book.id}`}) %>
        </div>
    </div>
    <div class="view-author-from-book">
        <a href="/authors/<%= book.author.id %>">View Author</a>
    </div>
</div>